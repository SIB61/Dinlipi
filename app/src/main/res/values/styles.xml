<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDodgerBlue</item>
        <item name="BackgroundColor">@color/colorWhite</item>
        <item name="OverlapBackgroundColor">#6200EA</item>
        <item name="WriteText">#6200EA</item>
        <item name="HomeText1">@color/colorBlack</item>
        <item name="HomeText2">#38393A</item>
        <item name="HintTextColor">#BBC2C8</item>
        <item name="IconColor1">#6200EA</item>
        <item name="IconColor2">#404147</item>
        <item name="white">#FFF</item>
        <item name="android:windowAnimationStyle">
            @style/WindowTransitionAnim
        </item>
            </style>
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">#757478</item>
        <item name="colorAccent">#323030</item>
        <item name="BackgroundColor">@color/colorBlack</item>
        <item name="OverlapBackgroundColor">#404147</item>
        <item name="WriteText">@color/colorWhite</item>
        <item name="HomeText1">@color/colorWhite</item>
        <item name="HomeText2">#9A9EA1</item>
        <item name="HintTextColor">#D2D8DD</item>
        <item name="IconColor1">@color/colorWhite</item>
        <item name="IconColor2">#404147</item>
        <item name="white">#FFF</item>
        <item name="android:windowAnimationStyle">
            @style/WindowTransitionAnim
        </item>
    </style>

    <style name="WindowTransitionAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
       <item name="android:fragmentCloseEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:fragmentCloseExitAnimation">@anim/fragment_fade_exit</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
